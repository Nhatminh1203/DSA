#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int n, x;
int a[21];

bool check(){
    int count = 0;
    for(int i = 1; i <= n; i++){
        if(a[i] == 1) count++;
    }
    if(count == x) return true;
    else return false;
}
void Try(int pos){
    if(pos > n){
        if(!check()) return;
        for(int i = 1; i <= n; i++){
            cout << a[i];
        }
        cout << "\n";
        return;
    }

    for(int i = 0; i <= 1; i++){
        a[pos] = i;
        Try(pos + 1);
    }
}

int main(){

    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    int t;
    cin >> t;
    while(t--){
        cin >> n >> x;
        Try(1);
    }
}
